<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:id="@+id/activity_product_detail"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:textAlignment="center"
            android:text="Product 1" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Price: $ 10" />

        <LinearLayout
            android:id="@+id/quantity_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/textViewStyle"
                android:gravity="center"
                android:text="Quantity: " />
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:background="@drawable/oval_red_button" />
            <TextView
                android:id="@+id/tv_quantity_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/textViewStyle"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="0" />
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:background="@drawable/oval_green_button" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Total: $ 50" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Description: " />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Shop: " />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_button"
        android:text="Add to cart" />
</LinearLayout>