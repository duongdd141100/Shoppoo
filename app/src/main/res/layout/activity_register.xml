<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Fullname: "/>
            <EditText
                android:id="@+id/et_fullname"
                android:layout_toRightOf="@id/tv_fullname"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_below="@+id/et_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Gender: "/>
            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_below="@+id/et_fullname"
                android:layout_toRightOf="@id/tv_gender"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textViewStyle"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textViewStyle"
                    android:text="Female"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tv_address"
                android:layout_below="@+id/rg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Address: "/>
            <EditText
                android:id="@+id/et_address"
                android:layout_below="@+id/rg_gender"
                android:layout_toRightOf="@id/tv_fullname"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_below="@+id/et_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Phone Number: "/>
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_below="@+id/et_address"
                android:layout_toRightOf="@id/tv_phone_number"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@+id/et_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Email: "/>
            <EditText
                android:id="@+id/et_email"
                android:layout_below="@+id/et_phone_number"
                android:layout_toRightOf="@id/tv_email"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_below="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Username: "/>
            <EditText
                android:id="@+id/et_username"
                android:layout_below="@+id/et_email"
                android:layout_toRightOf="@id/tv_username"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_password"
                android:layout_below="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Password: "/>
            <EditText
                android:id="@+id/et_password"
                android:layout_below="@+id/et_username"
                android:layout_toRightOf="@id/tv_password"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_retype"
                android:layout_below="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Retype Password: "/>
            <EditText
                android:id="@+id/et_retype"
                android:layout_below="@+id/et_password"
                android:layout_toRightOf="@id/tv_retype"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_shop"
                android:layout_below="@+id/et_retype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle"
                android:text="Shop: "/>
            <CheckBox
                android:id="@+id/cb_shop"
                android:layout_below="@+id/et_retype"
                android:layout_toRightOf="@id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textViewStyle" />

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_info"
            android:layout_below="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Shop Name: "/>
        <EditText
            android:id="@+id/et_shop_name"
            android:layout_toRightOf="@id/tv_shop_name"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_below="@+id/et_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Category: "/>
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_below="@+id/et_shop_name"
            android:layout_toRightOf="@id/tv_shop_name"
            style="@style/textViewStyle"
            android:background="@drawable/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_shop_address"
            android:layout_below="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Shop Address: "/>
        <EditText
            android:id="@+id/et_shop_address"
            android:layout_below="@+id/tv_category"
            android:layout_toRightOf="@id/tv_shop_address"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_below="@+id/et_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Description: "/>
        <EditText
            android:id="@+id/et_description"
            android:layout_below="@+id/et_shop_address"
            android:layout_toRightOf="@id/tv_description"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/pay"
        android:text="Register" />
</LinearLayout>